            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="141dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="54dp"
                    android:text="Cidade:" />

                <Spinner
                    android:id="@+id/spinnerCidade"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:entries="@array/cidade"
                    android:paddingLeft="7dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/editEndereco"
                style="@style/Input"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Endereço"
                android:inputType="text" />

            <EditText
                android:id="@+id/editNumeroEndereco"
                style="@style/Input"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Numero Endereço"
                android:inputType="text" />

            <EditText
                android:id="@+id/editComplemento"
                style="@style/Input"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Complemento"
                android:inputType="text" />

            <EditText
                android:id="@+id/editBairro"
                style="@style/Input"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Bairro"
                android:inputType="text" />

            <Button
                android:id="@+id/botaoSalvarAtividade"
                style="@style/estiloBotao"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/salvar" />
            <!--android:onClick="botaoAcessar" -->
            <!--android:id="@+id/idBotaoAcessar" -->
            <!--android:text="CADASTRAR" -->


            <!-- Botão provisório -->
            <Button
                android:id="@+id/botaoVoltar"
                style="@style/estiloBotao"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/voltar" />


