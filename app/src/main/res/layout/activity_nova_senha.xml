<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NovaSenha">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/idLogo"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/bsgilogo3c"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="54dp"
                android:text="Alterar senha"/>
            <EditText
                android:id="@+id/editEmail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                style="@style/Input"
                android:hint="E-Mail"
                android:inputType="textEmailAddress"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/editNovaSenha"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                style="@style/Input"
                android:hint="Nova Senha"
                android:inputType="textPassword"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/editRepetirSenha"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                style="@style/Input"
                android:hint="Repetir Senha"
                android:inputType="textPassword"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/idBotaoAlterar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                style="@style/BotaoAcessar"
                android:layout_gravity="center"
                android:text="@string/alterar"/>
            <!--android:onClick="botaoAcessar" -->
            <!--android:id="@+id/idBotaoAcessar" -->
            <!--android:text="ALTERAR" -->

            <Button
                android:id="@+id/idBotaoAcessar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                style="@style/BotaoAcessar"
                android:layout_gravity="center"
                android:visibility="gone"
                android:text="@string/acessar"/>




        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>