<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecuperarSenha">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/idLogo"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/bsgilogo3c"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="54dp"
                android:text="@string/informeEmail"/>
            <!--android:text="@string/informeEmail" -->
            <!--android:text="@string/resgatarSenha" -->
            <EditText
                android:id="@+id/editEmail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                style="@style/Input"
                android:hint="Digite seu e-mail cadastrado"
                android:inputType="textEmailAddress"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/idBotaoEnviar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                style="@style/estiloBotao"
                android:layout_gravity="center"
                android:text="@string/enviar"/>
            <!--android:onClick="botaoAcessar" -->
            <!--android:id="@+id/idBotaoAcessar" -->
            <!--android:text="ALTERAR" -->



        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>