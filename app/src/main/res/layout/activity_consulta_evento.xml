<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/verticalbackground"
    tools:context=".ConsultaEvento">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/bsgilogo3c"/>





            <ImageView
                style="@style/Titulo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/titPrincipal" />

            <EditText
                android:autofillHints="name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editNome"
                android:inputType="text"
                style="@style/Input"
                android:hint="Nome(Bloco, Comunidade ou Distrito)"/>
            <Spinner
                android:entries="@array/estados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Input"
                android:id="@+id/spinnerPais"/>

            <DatePicker
                android:id="@+id/dateNiver"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"/>
            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"/>

            <EditText
                android:autofillHints="name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editEvento"
                android:inputType="text"
                style="@style/Input"
                android:hint="Nome da Ativadade ou Evento"/>
            <EditText
                android:id="@+id/editEndereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name"
                android:hint="Endereco (da sede, bloco, etc...)"
                style="@style/Input"
                android:inputType="text" />

            <Button
                android:id="@+id/buttonPesquisar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/estiloBotao"
                android:text="Pesquisar" />

            <ListView
                android:id="@+id/listViewEventos"
                style="@style/Input"
                android:layout_width="match_parent"
                android:layout_height="100dp" />




        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>